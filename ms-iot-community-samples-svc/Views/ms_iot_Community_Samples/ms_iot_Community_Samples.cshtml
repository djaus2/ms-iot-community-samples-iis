@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<ms_iot_community_samples_svc.Models.Errors >
<html>
<head>
    <title>Microsoft IoT Community Samples</title>
	<meta charset="utf-8" />
    <script type="text/javascript">
        function OnBodyLoad( )
        {
            var txt = '@Model.Message';

            var ch = txt.charAt(0);
            if (ch == '$') {
                txt = txt.split("&lt;").join("<");
                txt = txt.split("&gt;").join(">");
                txt = txt.substr(1, txt.length - 1);
                document.getElementById("tdAbout").innerHTML = txt;
            }
            else
                document.getElementById("TextAreaAbout").value = txt;

        }
    </script>
</head>

<body onload="OnBodyLoad()">

    <h1>Microsoft IoT Community Samples</h1>
    <table>
        <colgroup>
            <col style="font-weight:bold;" />
            <col />
        </colgroup>
        <tr>
            <td><h2>Samples Menu</h2></td>
            <td><h2>Other Links</h2></td>
        </tr>
        <tr>
            <td><a href="/ms_iot_Community_Samples/list">View (filtered) list of Sample Projects</a></td>
            <td><a href="https://github.com/ms-iot/Samples">[GitHub]ms-iot/Samples</a></td>
        </tr>
        <tr>
            <td><a href="/ms_iot_Community_Samples/reset">Show all</a></td>
            <td><a href="https://github.com/djaus2/ms-iot-Community-Samples">[GitHub]ms-iot-Community-Samples</a></td>
        </tr>
        <tr>
            <td><a href="/ms_iot_Community_Samples/Admin">Admin</a></td>
            <td><a href="https://developer.microsoft.com/en-US/windows/iot">Windows IoT Dev Center</a></td>
        </tr>
            
        <tr>
            <td><a href="/ms_iot_Community_Samples/MDFileTemplate">MD File Template</a></td>          
            <td><a href="https://www.hackster.io">Hackster.IO</a></td>
        </tr>

        <tr>
            <td><a href="/Default">Sportronics</a></td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td id="tdAbout" colspan="2" width="800"><input readonly type="text" id="TextAreaAbout" width="800" ></td>
        </tr>
         
        <tr>
            <td colspan="2"><iframe id="iframeAbout" src="/Site_Content/ms_iot_Community_Samples/ReadMe" width="800" height="1000" scrolling="no" frameborder="0" /></td>
        </tr>




    </table>
</body>
</html>
